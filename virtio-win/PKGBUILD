pkgname=virtio-win
pkgver=1.9.17
pkgrel=1
pkgdesc='virtio drivers for Windows (2000, XP, Vista, 7, 8, 10) guests signed version'
arch=('any')
url='https://docs.fedoraproject.org/en-US/quick-docs/creating-windows-virtual-machines-using-virtio-drivers/index.html'
license=('BSD-3-Clause')
optdepends=('qemu')
# https://access.redhat.com/downloads/content/rhel---8/x86_64/7441/virtio-win/1.9.17-4.el8_4/noarch/fd431d51/package
source=("$pkgname-$pkgver.iso")
noextract=("$pkgname-$pkgver.iso")
sha256sums=('02371035f75b82cf5fc1ec056fcda7efd98ba972e1b68ed2ec8e14ebbef0f931')

package() {
	install -vDm644 $pkgname-$pkgver.iso "${pkgdir}/var/lib/libvirt/images/${pkgname}.iso"
}
